@model IEnumerable<PhapClinicX.Models.ViewModels.DoanhThuPhongKhamViewModel>
@using Microsoft.AspNetCore.Http

<div class="container mt-5">
    <h2>📊 Doanh Thu Theo Phòng Khám</h2>

    <form method="get" class="mb-4">
        <div class="row g-2 align-items-center">
            <div class="col-auto">
                <label for="startDate" class="col-form-label">Từ ngày:</label>
            </div>
            <div class="col-auto">
                <input type="date" id="startDate" name="startDate" value="@Context.Request.Query["startDate"]" class="form-control" />
            </div>
            <div class="col-auto">
                <label for="endDate" class="col-form-label">Đến ngày:</label>
            </div>
            <div class="col-auto">
                <input type="date" id="endDate" name="endDate" value="@Context.Request.Query["endDate"]" class="form-control" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Lọc</button>
            </div>
        </div>
    </form>

    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0">Danh sách</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>🏥 Phòng khám</th>
                        <th>💰 Tổng doanh thu</th>
                        <th>📦 Sản phẩm đã bán</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.TenPhongKham</td>
                            <td class="text-success fw-bold">@item.TongDoanhThu?.ToString("N0") VND</td>
                            <td>@item.TongSanPhamBanDuoc</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
